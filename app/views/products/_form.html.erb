<%= form_with(model: product, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Cateogory.all, :id, :name, { prompt: 'Select Category' }, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :inventory %>
    <%= form.number_field :inventory, min 0 %>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
