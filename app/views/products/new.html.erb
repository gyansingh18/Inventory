<h1>Add New Product</h1>

<%= form_with(model: @product) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Cateogory.all, :id, :name %>
  </div>

  <div>
    <%= f.submit "Save Product" %>
  </div>
<% end %>
